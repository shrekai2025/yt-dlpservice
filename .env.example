# YT-DLP Service 环境变量配置示例
# 复制此文件为 .env 并根据您的需求修改相应值

# 运行环境
NODE_ENV=development

# 数据库配置 (SQLite)
DATABASE_URL="file:./data/app.db"

# 通义听悟 API 配置 (必须配置)
# 从阿里云控制台获取: https://ram.console.aliyun.com/manage/ak
TINGWU_ACCESS_KEY_ID=your_access_key_id_here
TINGWU_ACCESS_KEY_SECRET=your_access_key_secret_here
TINGWU_REGION=cn-beijing

# 应用配置
MAX_CONCURRENT_TASKS=10
TEMP_DIR=/tmp/yt-dlpservice
AUDIO_FORMAT=mp3
AUDIO_BITRATE=128k

# 文件清理配置
MAX_FILE_AGE_HOURS=1
CLEANUP_INTERVAL_HOURS=24

# Next.js 开发配置
PORT=3000
HOSTNAME=localhost

# Puppeteer 浏览器配置
PUPPETEER_HEADLESS=false
PUPPETEER_ARGS=--no-sandbox --disable-setuid-sandbox
BROWSER_DATA_DIR=./data/browser_data
